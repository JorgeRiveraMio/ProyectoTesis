@model ProyectoTesis.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">❌ Error</h1>
<h2 class="text-danger">Ocurrió un problema al procesar tu solicitud.</h2>

@if (Model != null)
{
    if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }

    if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color:red;">
            <strong>Detalle:</strong> @Model.ErrorMessage
        </p>
    }

    if (Model.SesionId != null)
    {
        <p><strong>SesionId:</strong> @Model.SesionId</p>
    }
    if (Model.ModuloId != null)
    {
        <p><strong>ModuloId:</strong> @Model.ModuloId</p>
    }
    if (Model.IntentoId != null)
    {
        <p><strong>IntentoId:</strong> @Model.IntentoId</p>
    }
}
else
{
    <p style="color:red;">No se recibió información adicional del error.</p>
}

<hr />
<h3>Development Mode</h3>
<p>
    Cambia a <strong>Development</strong> para ver más detalles técnicos del error.<br />
    (ASPNETCORE_ENVIRONMENT = Development)
</p>